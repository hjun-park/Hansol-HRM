<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.hansol.hrm.service.staff.domain.StaffMapper">


    <select id="findAll" resultType="com.hansol.hrm.service.staff.domain.Staff">
        SELECT *
        FROM staff
        WHERE status = 'USED';
    </select>

    <select id="findById" resultType="com.hansol.hrm.service.staff.domain.Staff">
        SELECT *
        FROM staff
        WHERE id = #{staffId}
          AND status = 'USED';
    </select>

    <select id="findByName" resultType="com.hansol.hrm.service.staff.domain.Staff">
        SELECT *
        FROM staff
        WHERE name LIKE CONCAT('%', #{name}, '%')
          AND status = 'USED';
    </select>

    <insert id="insertOne" parameterType="com.hansol.hrm.service.staff.domain.Staff" useGeneratedKeys="true"
            keyProperty="id" keyColumn="id"><!-- useGeneratedKeys="true" -->
        INSERT INTO staff(name, phone_number, type, task_id, position_id)
        values (#{name}, #{phoneNumber}, #{type}, #{taskId}, #{positionId})
    </insert>

    <update id="updateOne">
        UPDATE staff
        <trim prefix="SET" suffixOverrides=",">
            <if test="staffEntity.name != null and staffEntity.name != ''">name=#{staffEntity.name},</if>
            <if test="staffEntity.phoneNumber != null and !staffEntity.phoneNumber.equals('')">phone_number=#{staffEntity.phoneNumber},</if>
            <if test="staffEntity.type != null and !staffEntity.type.equals('')">type=#{staffEntity.type},</if>
            <if test="staffEntity.taskId != null and staffEntity.taskId != ''">task_id=#{staffEntity.taskId},</if>
            <if test="staffEntity.positionId != null and staffEntity.positionId != ''">position_id=#{staffEntity.positionId},</if>
        </trim>
        WHERE id = #{staffId}
    </update>

    <update id="statusToDelete" parameterType="Long">
        UPDATE staff
        SET status = 'DELETED'
        WHERE id = #{staffId}
    </update>

</mapper>
